<% layout("/layouts/boilerplate") %>


    <body>
        <!-- Filters Section -->
        <div
            class="container-fluid bg-white py-3 position-relative d-flex justify-content-between align-items-center px-4">
            <div class="d-flex flex-nowrap overflow-auto px-3 gap-3">
                <button class="btn btn-outline-dark rounded-pill px-3 flex-shrink-0">
                    <i class="fa-solid fa-house-chimney me-2"></i> Entire homes
                </button>
                <button class="btn btn-outline-dark rounded-pill px-3 flex-shrink-0">
                    <i class="fa-solid fa-bed me-2"></i> Rooms
                </button>
                <button class="btn btn-outline-dark rounded-pill px-3 flex-shrink-0">
                    <i class="fa-solid fa-water-ladder me-2"></i> Pool
                </button>
                <button class="btn btn-outline-dark rounded-pill px-3 flex-shrink-0">
                    <i class="fa-solid fa-mountain-sun me-2"></i> Amazing views
                </button>
                <button class="btn btn-outline-dark rounded-pill px-3 flex-shrink-0">
                    <i class="fa-solid fa-tree me-2"></i> Countryside
                </button>
                <button class="btn btn-outline-dark rounded-pill px-3 flex-shrink-0">
                    <i class="fa-solid fa-city me-2"></i> City stays
                </button>
                <button class="btn btn-outline-dark rounded-pill px-3 flex-shrink-0">
                    <i class="fa-solid fa-snowflake me-2"></i> Winter stays
                </button>
                <button class="btn btn-outline-dark rounded-pill px-3 flex-shrink-0">
                    <i class="fa-solid fa-fire me-2"></i> Trending
                </button>
                <button class="btn btn-outline-dark rounded-pill px-3 flex-shrink-0">
                    <i class="fa-solid fa-star me-2"></i> Top rated
                </button>
            </div>

            <div class="d-flex align-items-center bg-white rounded-pill shadow-sm px-3 py-1 border flex-shrink-0"
                style="white-space: nowrap; ">
                <span class="small text-muted me-2">Display total before taxes</span>
                <label class="switch mb-0">
                    <input type="checkbox" id="taxToggle" checked />
                    <span class="slider round"></span>
                </label>
            </div>
        </div>


        <!-- <form method="GET" action="/listings/new">
        <button>Create new listing</button>
            </form> -->

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

            <% for(let listing of allListings) {%>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                            style="height: 20rem;" />
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b><br>
                                &#8377; <%= listing.price.toLocaleString('en-IN') %> / night
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>

    </body>